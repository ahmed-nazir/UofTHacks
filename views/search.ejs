<%- include("./partials/header") %> 
<style>
  .col-3{
    border: 1px solid black;
  }
  .content{
    color: black;
  }
  .col-6{
    border: 1px solid black;
  }
</style>
<div class="container" style="margin-top: 30px; float: center;">
  <div class="row">
    <div class="col-3">
      Course code
    </div>
    <div class="col-3">
      Course Instructor(s)
    </div>
    <div class="col-6">
      Course Title
    </div>
  </div>
  <% courses.forEach(function(course){ %>
  <tr>
    <div class="row">
      <td >
        <div class="col-3" style="">
          <span class="content"><%=course.course_code%></span>
        </div>
      </td >
      <td>
        <div class="col-3" style="border: 1px solid black;">
          <span class="content"><%=course.prof_name%></span>
        </div>
      </td>
      <td>
        <div class="col-6" style="border: 1px solid black;">
          <a href="/courses/<%=course._id%>"><span class="content"><%=course.title%></span></a>
        </div>
      </td>
    </div>
  </tr>  
  <% }) %>
</div>
<%- include("./partials/footer") %> 