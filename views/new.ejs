<%- include('./partials/header') %>

<div class="container" style="margin:70px auto;">
  <div class="row">
    <div class="col-4"></div>
      <div class="col-4">
        <div class="row">
          <div class="col-12"><div style="text-align: center;margin-bottom: 10px;font-size: 30px;">Add a new course</div></div>
        </div>
      </div>
      <div class="col-4"></div>
  </div>
  <form action="/new" method="POST">
    <div class="form-group row">
      <div class="col-4"></div>
      <div class="col-4">
        <div class="row">
          <div class="col-12"><input type="text" class="form-control" name="course_code" placeholder="Course Code"></div>
        </div>
      </div>
      <div class="col-4"></div>
      
    </div>
    <div class="form-group row">
      <div class="col-4"></div>
      <div class="col-4">
        <div class="row">
          <div class="col-12"><input type="text" class="form-control" name="title" placeholder="Course Title"></div>
        </div>
      </div>
      <div class="col-4"></div>
      
    </div>
    <div class="form-group row">
      <div class="col-4"></div>
      <div class="col-4">
        <div class="row">
          <div class="col-12"><input type="text" class="form-control" name="prof_name" placeholder="Course Instructor(s)"></div>
        </div>
      </div>
      <div class="col-4"></div>
      
    </div>
    <div class="form-group row">
      <div class="col-4"></div>
      <div class="col-4">
        <div class="row">
          <div class="col-12"><input type="text" class="form-control" name="description" placeholder="description"></div>
        </div>
      </div>
      <div class="col-4"></div>
      
    </div>
    <div class="form-group row">
      <div class="col-4"></div>
      <div class="col-4">
          <div><button class="btn btn-lg btn-primary btn-block">Add Course</button></div>
      </div>
      <div class="col-4"></div>
    </div>
  </form>
</div>

<%- include('./partials/footer') %>